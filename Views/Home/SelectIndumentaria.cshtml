<head>

</head>
<body>
    <header>
        <h1 class="title">Selecciona o crea indumentaria</h1>
        <a href='Index'>Volver al index</a>
    </header>
    <section>
        <div>
            <form action='@Url.Action("GuardarIndumentaria")'>
                <div>
                    <p>Equipos: </p>
                    @foreach (string item in ViewBag.ListaEquipos)
                    {
                        <b>@item, </b>
                    }
                    <input value="Equipo" type="number" required min=1 max=@ViewBag.ListaEquipos.Count>
                </div>
                <div>
                    <h1>Medias</h1> <br>
                    @foreach (string item in ViewBag.ListaMedias)
                    {
                        <img src="/img/medias/@item" alt="img media" height="100">
                    }
                    <input value="Medias" type="number" required min=1 max=@ViewBag.ListaEquipos.Count>
                </div>
                <div>
                    <h1>Pantalones</h1> <br>
                    @foreach (string item in ViewBag.ListaPantalones)
                    {
                        <img src="/img/pantalones/@item" alt="img pantalones" height="100">
                    }
                    <input value="Pantalon" type="number" required min=1 max=@ViewBag.ListaEquipos.Count>
                </div>
                <div>
                    <h1>Remeras</h1> <br>
                    @foreach (string item in ViewBag.ListaRemeras)
                    {
                        <img src="/img/remeras/@item" alt="img remera" height="100">
                    }
                    <input value="Remera" type="number" required min=1 max=@ViewBag.ListaEquipos.Count>
                </div>
                <input type="submit">
            </form>
        </div>
    </section>
    <footer>
        <p>Made by Ivo y Chinocapo</p>
    </footer>
</body>